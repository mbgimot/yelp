<% if @restaurants.all.any? %>
  <% @restaurants.all.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <%= restaurant.reviews.first.thoughts if restaurant.reviews.any? %>
    <h4><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
        <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete%>
        <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></h4>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<a href='restaurants/new'>Add a restaurant</a>
